<link rel="stylesheet" href="/css/profile.css">
<h1><%=profile_user.name%> | Profile Page</h1>
<div id="profile-main-body">
    <section id="user-profile">
        <div id="user-profile-pic">
            <img src="<%= profile_user.avatar%>" alt="<%=profile_user.name%>">
        </div>
        <div id ="user-profile-details">
            <p><%= profile_user.name%></p>
        </div>
    </section>
    
    
    <section id="profile-update-form">
        <% if(user.id == profile_user.id){ %>
            <h2>Update your Profile Details</h2>
            <div id="form-container">
            <form action="/users/update/<%=profile_user.id%>" method="POST" enctype="multipart/form-data">
                <input type="text" name="name" placeholder="Enter new name" value = "<%=profile_user.name%>"required>
                <input type="email" name="email" placeholder="Enter new email"  value = "<%=profile_user.email%>" required>
                <input type="file" name="avatar" placeholder=" Profile Picture">
                <input type="submit" value="Update Details">
            </form>
            </div>
            
        <% }else{ %>
            <p>Hey, <%= profile_user.name%>, <br>Login to your profile to update your profile details</p>
         
        <% } %>
    </section>
</div>